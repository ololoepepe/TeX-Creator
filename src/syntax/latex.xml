<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE BTEXTEDITOR_SYNTAX>
<syntax>
    <type>LaTeX</type>
    <pattern syntax="RegExp">^.*\.(tex|inp|pic|sty)$</pattern>
    <brackets>
        <escape>\</escape>
        <!--skip_highlighted/-->
    </brackets>
    <element>
        <pattern>\\[a-zA-Z]*|\\#|\\\$|\\%|\\&amp;|\\_|\\\{|\\\}</pattern>
        <format weight="Normal">darkred</format>
    </element>
    <element multiline="true">
        <pattern syntax="FixedString">$</pattern>
        <format>darkgreen</format>
        <preventing>\</preventing>
    </element>
    <element>
        <pattern syntax="FixedString">$</pattern>
        <format>blue</format>
    </element>
    <element>
        <pattern>%.*</pattern>
        <format>darkgrey</format>
        <preventing>\</preventing>
    </element>
</syntax>
